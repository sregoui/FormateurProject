        </activity>
        <activity
            android:name="com.insta.instaschool.activity.NewsActivity"
            android:label="@string/title_activity_news" >
        </activity>
        <activity
            android:name="com.insta.instaschool.activity.DetailPromoActivity"
            android:label="@string/title_activity_detail_promo" >
        </activity>
        <activity
            android:name="com.insta.instaschool.activity.DetailEleveActivity"
            android:label="@string/title_activity_detail_eleve" >
        </activity>
        <activity
            android:name="com.insta.instaschool.activity.DetailFormateursActivity"
            android:label="@string/title_activity_detail_formateurs" >
